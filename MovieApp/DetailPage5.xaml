            Source="{Binding Name2}"
            WidthRequest="195"
            HeightRequest="292.5"
            SemanticProperties.Hint="go to movie"
            Command="{Binding Movie2Command}"
            />
            <ImageButton
            Source="{Binding Name3}"
            WidthRequest="195"
            HeightRequest="292.5"
            SemanticProperties.Hint="go to movie"
            Command="{Binding Movie3Command}"
            />
            <ImageButton
            Source="{Binding Name4}"
            WidthRequest="195"
            HeightRequest="292.5"
            SemanticProperties.Hint="go to movie"
            Command="{Binding Movie4Command}"
            />
            <ImageButton
            Source="{Binding Name5}"
            WidthRequest="195"
            HeightRequest="292.5"
            SemanticProperties.Hint="go to movie"
            Command="{Binding Movie5Command}"
            />

        </FlexLayout>
    </ScrollView>
</ContentPage>